// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Exercise {
  id Int @id @default(autoincrement())
  name String @unique
  value Int
  workout Workout @relation(fields: [workoutId], references: [id])
  workoutId Int
}

model Workout {
  id Int @id @default(autoincrement())
  user String
  date DateTime
  exercises Exercise[]
}